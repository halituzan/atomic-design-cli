// _mixins.scss
@mixin buttonStyles($bg-color, $text-color) {
  background-color: $bg-color;
  color: $text-color;
  font-family: 'Arial', sans-serif;
  padding: 10px 20px;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  transition: background-color 0.3s ease;

  &:hover {
    background-color: darken($bg-color, 10%);
  }
}